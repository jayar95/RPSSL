{% extends "AppBundle::base.html.twig" %}

{% block assets %}
    {{ parent() }}

    <script src="{{ asset('js/game.js') }}" type="text/javascript"></script>
{% endblock %}

{% block content %}
    <div class="game-room">
        {% include('@App/Game/nav.html.twig') %}

        <div class="game">
            <h3>Pick a hand:</h3>

            <div class="hands">
                <a href="#" class="hand">
                    <img src="{{ asset('images/rock.png') }}" id="rock" data-toggle="tooltip" data-placement="top" title="Rock" />
                </a>

                <a href="#" class="hand">
                    <img src="{{ asset('images/paper.png') }}" id="paper" data-toggle="tooltip" data-placement="top" title="Paper" />
                </a>

                <a href="#" class="hand">
                    <img src="{{ asset('images/scissors.png') }}" id="scissors" data-toggle="tooltip" data-placement="top" title="Scissor" />
                </a>

                <a href="#" class="hand">
                    <img src="{{ asset('images/spock.png') }}" id="spock" data-toggle="tooltip" data-placement="top" title="Spock" />
                </a>

                <a href="#" class="hand">
                    <img src="{{ asset('images/lizard.png') }}" id="lizard" data-toggle="tooltip" data-placement="top" title="Lizard" />
                </a>
            </div>

            <div class="results row">
                <div class="col-md-6">
                    <h3>Computer plays:</h3>

                    <div class="computer-hand">

                    </div>
                </div>
                <div class="col-md-6 outcome">

                </div>
            </div>
        </div>
    </div>
{% endblock %}